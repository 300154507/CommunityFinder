<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:onClick="clickSearch">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Community App Database"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editText10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Subdivision"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:background="#ffffd9c4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:hint="Income Score"
        android:background="#ffc8c2ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:hint="Education Score"
        android:background="#ffffe5c3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:hint="Housing Score"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:background="#ffffd5f6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:hint="Labour Force Score"
        android:background="#ffbfe7ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_below="@+id/editText6"
        android:hint="CWB Score"
        android:background="#ffbaffc7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_alignParentStart="true"
        android:hint="Population"
        android:background="#ffdcd8ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:hint="Category"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true"
        android:background="#fffeffe9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_below="@+id/editText9"
        android:layout_alignParentStart="true"
        android:hint="Province"
        android:background="#ffcdffee" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="CSD Code"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/editText7"
        android:background="#ffd8ffa9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button"
        android:layout_marginTop="40dp"
        android:onClick="addCommunity"
        android:layout_below="@+id/editText10"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/findCommunityByCode"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/editText5"
        android:onClick="findCommunity"
        android:nestedScrollingEnabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/DeleteCommunity"
        android:layout_alignBottom="@+id/findCommunityByCode"
        android:layout_toEndOf="@+id/findCommunityByCode"
        android:layout_marginStart="26dp"
        android:onClick="deleteCommunity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display All Records"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="35dp"
        android:onClick="displayAllRecords" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>
